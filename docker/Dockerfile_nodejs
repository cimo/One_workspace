ARG NODEJS_VERSION

FROM node:${NODEJS_VERSION}

ARG WWW_USER_NAME
ARG WEB_PATH
ARG PATH_ROOT
ARG TIMEZONE
ARG CERTIFICATE_FILE
ARG CERTIFICATE_KEY
ARG CERTIFICATE_CHAIN
ARG NODEJS_ENV
ARG NODEJS_DIGEST_ENABLE
ARG NODEJS_PORT_HTTP
ARG NODEJS_PORT_HTTPS
ARG NODEJS_PORT_VUE
ARG NODEJS_PORT_VUE_APP

ENV NODE_ENV=${NODEJS_ENV}
ENV DEBIAN_FRONTEND=noninteractive
ENV DEBCONF_NOWARNINGS=yes

COPY ${PATH_ROOT}/entrypoint_nodejs.sh /usr/local/bin/entrypoint.sh

# System
RUN cd ~ \
&& chmod +x /usr/local/bin/entrypoint.sh \
&& apt-get update && apt-get install -y \
software-properties-common \
sudo \
nano \
tzdata \
curl \
make \
git \
zip \
unzip \
cron \
wget \
sshpass \
# Docker
&& wget -q https://download.docker.com/linux/static/stable/x86_64/docker-19.03.9.tgz \
&& tar -xzvf docker-19.03.9.tgz -C /tmp \
&& mv /tmp/docker/docker /usr/bin \
# Time
&& ln -sf /usr/share/zoneinfo/${TIMEZONE} /etc/localtime \
&& dpkg-reconfigure -f noninteractive tzdata \
# Npm
&& npm install -g @vue/cli \
&& npm install -g typescript \
&& npm install -g eslint \
&& npm install -g terser \
&& npm install -g sass \
# Clean
&& rm docker-19.03.9.tgz \
&& rm -rf /tmp/docker \
&& rm -rf /var/lib/apt/lists/* \
&& apt-get clean -y \
&& apt-get autoclean -y \
&& apt-get autoremove -y

ENTRYPOINT ["/usr/local/bin/entrypoint.sh"]

EXPOSE ${NODEJS_PORT_HTTP} ${NODEJS_PORT_HTTPS} ${NODEJS_PORT_VUE} ${NODEJS_PORT_VUE_APP}