ARG _NODEJS_VERSION

FROM node:${_NODEJS_VERSION}

ARG _ENV_NAME
ARG _DOMAIN
ARG _TIME_ZONE
ARG _LANG
ARG _PATH_ROOT
ARG _NODEJS_SERVER_PORT
ARG _NODEJS_SERVER_PORT_RANGE

ENV ENV_NAME=${_ENV_NAME}
ENV DOMAIN=${_DOMAIN}
ENV TZ=${_TIME_ZONE}
ENV LANG=${_LANG}
ENV PATH_ROOT=${_PATH_ROOT}
ENV NODEJS_VERSION=${_NODEJS_VERSION}
ENV NODEJS_SERVER_PORT=${_NODEJS_SERVER_PORT}
ENV NODEJS_SERVER_PORT_RANGE=${_NODEJS_SERVER_PORT_RANGE}

ENV DEBIAN_FRONTEND=noninteractive
ENV DEBCONF_NOWARNINGS=yes
ENV SUDO_FORCE_REMOVE=yes
ENV NODE_OPTIONS=--use-openssl-ca

COPY ./certificate/proxy/ /usr/local/share/ca-certificates/

RUN cd ~ \
    # No root
    && mkdir -p ${PATH_ROOT} \
    && chown -R node:node ${PATH_ROOT} \
    && chmod -R 775 ${PATH_ROOT} \
    # Update
    && VERSION_CODENAME=$(grep VERSION_CODENAME= /etc/os-release | cut -d= -f2) \
    && chmod -R 0644 /usr/local/share/ca-certificates/ \
    && apt-get update && apt-get install -y ca-certificates curl \
    && update-ca-certificates \
    # Apt
    && apt-get update && apt-get install -y \
    fonts-noto \
    fonts-noto-cjk \
    media-types \
    # GPU
    fuse \
    libfuse2 \
    libglib2.0-0 \
    libgtk-3-0 \
    libnss3 \
    libnspr4 \
    libx11-6 \
    libxext6 \
    libxrender1 \
    libxrandr2 \
    libfreetype6 \
    libfontconfig1 \
    libasound2 \
    libgomp1 \
    libgbm1 \
    libglu1-mesa \
    libvulkan1 \
    mesa-vulkan-drivers \
    mesa-utils \
    xdg-utils \
    dbus \
    dbus-x11 \
    # Electron
    libnss3-dev \
    libgtk-3-dev \
    libgdk-pixbuf2.0-dev \
    libxss-dev \
    libxtst-dev \
    libasound2-dev \
    # Clean
    && apt-get remove --purge -y sudo \
    && rm -rf /var/lib/apt/lists/* \
    && apt-get clean -y \
    && apt-get autoclean -y \
    && apt-get autoremove -y

USER node

WORKDIR ${PATH_ROOT}

# Tls
CMD chmod +x ${PATH_ROOT}docker/tls.sh \
    && bash ${PATH_ROOT}docker/tls.sh \
    # Nvidia
    && command -v nvidia-smi > /dev/null && nvidia-smi --query-gpu=name --format=csv,noheader || echo "Host without nvidia GPU." \
    # Vulkan
    && command -v vulkaninfo > /dev/null && vulkaninfo | grep "deviceName" || echo "Host without vulkan support." \
    # OpenGL
    && command -v glxinfo > /dev/null && glxinfo | grep "OpenGL renderer string" || echo "Host without opengl support." \
    # Keep running
    && tail -f /dev/null

EXPOSE ${NODEJS_SERVER_PORT} ${NODEJS_SERVER_PORT_RANGE}
