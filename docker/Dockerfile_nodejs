ARG NODEJS_VERSION

FROM node:${NODEJS_VERSION}

ARG WWW_USER_NAME
ARG WEB_PATH
ARG PATH_ROOT
ARG TIMEZONE
ARG CERTIFICATE_FILE
ARG CERTIFICATE_KEY
ARG CERTIFICATE_CHAIN
ARG NODEJS_ENV
ARG NODEJS_PORT_HTTP
ARG NODEJS_PORT_HTTPS
ARG NODEJS_DIGEST_ENABLE
ARG NODEJS_VUE_PORT
ARG NODEJS_VUE_APP_PORT

ENV DEBIAN_FRONTEND=noninteractive
ENV DEBCONF_NOWARNINGS=yes

COPY ${PATH_ROOT}/entrypoint_nodejs.sh /usr/local/bin/entrypoint.sh

# System
RUN cd ~ \
&& chmod +x /usr/local/bin/entrypoint.sh \
&& apt-get update && apt-get install -y \
software-properties-common \
sudo \
nano \
tzdata \
curl \
make \
git \
zip \
unzip \
cron \
wget \
# Time
&& ln -sf /usr/share/zoneinfo/${TIMEZONE} /etc/localtime \
&& dpkg-reconfigure -f noninteractive tzdata \
# Npm
&& npm install -g pm2 \
&& npm install -g @vue/cli \
&& npm install -g terser \
&& npm install -g sass \
# Selenium
&& wget -q -O - https://dl.google.com/linux/linux_signing_key.pub | apt-key add \
&& echo "deb [arch=amd64] http://dl.google.com/linux/chrome/deb/ stable main" >> /etc/apt/sources.list.d/google-chrome.list \
&& apt-get update \
&& apt-get install -y google-chrome-stable firefox-esr \
&& npm install -g selenium-side-runner --unsafe-perm=true --allow-root \
&& npm install -g chromedriver --unsafe-perm=true --allow-root \
&& npm install -g geckodriver --unsafe-perm=true --allow-root \
# Clean
&& rm -rf /var/lib/apt/lists/* \
&& apt-get clean -y \
&& apt-get autoclean -y \
&& apt-get autoremove -y

ENTRYPOINT ["/usr/local/bin/entrypoint.sh"]

EXPOSE ${NODEJS_PORT_HTTP} ${NODEJS_PORT_HTTPS} ${NODEJS_VUE_PORT} ${NODEJS_VUE_APP_PORT}