FROM node:22.12.0

ARG _ENV_NAME
ARG _DOMAIN
ARG _TIME_ZONE
ARG _LANG
ARG _PATH_ROOT
ARG _PATH_CERTIFICATE_PEM
ARG _NODEJS_SERVER_PORT
ARG _NODEJS_SERVER_PORT_RANGE

ENV ENV_NAME=${_ENV_NAME}
ENV DOMAIN=${_DOMAIN}
ENV TZ=${_TIME_ZONE}
ENV LANG=${_LANG}
ENV PATH_ROOT=${_PATH_ROOT}
ENV NODEJS_SERVER_PORT=${_NODEJS_SERVER_PORT}
ENV NODEJS_SERVER_PORT_RANGE=${_NODEJS_SERVER_PORT_RANGE}

ENV DEBIAN_FRONTEND=noninteractive
ENV DEBCONF_NOWARNINGS=yes
ENV SUDO_FORCE_REMOVE=yes
ENV NODE_OPTIONS=--use-openssl-ca
ENV NODE_EXTRA_CA_CERTS="${_PATH_CERTIFICATE_PEM}"
ENV WAYLAND_DISPLAY=wayland-0
ENV XDG_SESSION_TYPE=wayland
ENV XDG_RUNTIME_DIR="/mnt/wslg/runtime-dir/"
ENV ELECTRON_ENABLE_WAYLAND=1
ENV ELECTRON_OZONE_PLATFORM_HINT=auto
ENV OZONE_PLATFORM=wayland
ENV EGL_PLATFORM=wayland
ENV ANGLE_DEFAULT_PLATFORM=egl
ENV DBUS_SESSION_BUS_ADDRESS="unix:path=${XDG_RUNTIME_DIR}bus"
ENV PULSE_SERVER="unix:/mnt/wslg/PulseServer"
ENV NVIDIA_VISIBLE_DEVICES=all
ENV NVIDIA_DRIVER_CAPABILITIES=all
ENV PATH="${PATH}:/home/node/.cargo/bin/"
ENV RUST_BACKTRACE=1
ENV XWIN_CACHE_DIR="/home/node/xwin_cache/"

COPY ./certificate/ /usr/local/share/ca-certificates/
COPY ./docker/NotoSansJP-Regular.ttf /usr/share/fonts/truetype/noto/
COPY ./docker/NotoSansSymbols2-Regular.ttf /usr/share/fonts/truetype/noto/
COPY ./docker/NotoColorEmoji-Regular.ttf /usr/share/fonts/truetype/noto/
COPY ./docker/font.local.conf /etc/fonts/local.conf

RUN cd ~ \
    # No root
    && uid="$(id -u node)" \
    && mkdir -p ${PATH_ROOT} "/run/user/${uid}" \
    && chown -R node:node ${PATH_ROOT} "/run/user/${uid}" \
    && chmod -R 775 ${PATH_ROOT} \
    && chmod -R 700 "/run/user/${uid}" \
    # Update
    && VERSION_CODENAME=$(grep VERSION_CODENAME= /etc/os-release | cut -d= -f2) \
    && chmod -R 0644 /usr/local/share/ca-certificates/ \
    && apt-get update && apt-get install -y ca-certificates tzdata curl media-types jq \
    && update-ca-certificates \
    && ln -sf /usr/share/zoneinfo/${TZ} /etc/localtime && echo ${TZ} > /etc/timezone \
    && echo "application/typescript ts" >> /etc/mime.types \
    # Wslg
    && apt-get update && apt-get install -y \
    libglib2.0-0 \
    libgtk-3-0 \
    libcairo2 \
    libfontconfig1 \
    libfreetype6 \
    libnss3 \
    libnspr4 \
    libasound2 \
    libgbm1 \
    libegl1 \
    libegl1-mesa \
    libgl1-mesa-dri \
    libdrm2 \
    libwayland-client0 \
    libwayland-egl1 \
    libwayland-cursor0 \
    libgomp1 \
    xdg-utils \
    # Tauri
    && apt-get update && apt-get install -y \
    libwebkit2gtk-4.1-dev \
    libxdo-dev \
    libssl-dev \
    libayatana-appindicator3-dev \
    librsvg2-dev \
    nsis \
    lld \
    llvm \
    clang \
    libpipewire-0.3-dev \
    libgbm-dev \
    # Clean
    && apt-get remove --purge -y sudo \
    && rm -rf /var/lib/apt/lists/* \
    && apt-get clean -y \
    && apt-get autoclean -y \
    && apt-get autoremove -y

USER node

RUN \
    # Rust
    curl --proto '=https' --tlsv1.2 -sSf https://sh.rustup.rs | sh -s -- -y \
    && rustup target add x86_64-unknown-linux-gnu \
    && rustup target add x86_64-pc-windows-msvc \
    && cargo install --locked cargo-xwin

WORKDIR ${PATH_ROOT}

CMD \
    # Command
    command -v nvidia-smi > /dev/null && nvidia-smi --query-gpu=name --format=csv,noheader || echo "Host without nvidia GPU support." \
    # Dbus
    && bash ${PATH_ROOT}script/dbus.sh \
    # Rust
    && rustc --version \
    && cargo --version \
    && cargo xwin --version \
    # Keep running
    && tail -f /dev/null

EXPOSE ${NODEJS_SERVER_PORT} ${NODEJS_SERVER_PORT_RANGE}
